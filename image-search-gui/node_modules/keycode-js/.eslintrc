{
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "strict": 0,
    "no-var": 2,
    "indent": [2, 4],
    "semi": [2, "always"],
    "quotes": [2, "single"]
  }
}
